10 REM STRING MARQUEE DEMO (tinybasic-bsd)
20 REM SHOWS MID$ / LEN$ + SIMPLE SCROLLING PRINT
30 W=40
40 MSG$="  *** HELLO FROM tinybasic-bsd ***  "
50 S$=""
60 FOR J=1 TO W
70 S$=S$+" "
80 NEXT J
90 PAD$=MSG$+S$+MSG$
100 PRINT "MARQUEE (";W;" COLS)"
110 FOR I=1 TO LEN(MSG$)+W
120 LINE$=MID$(PAD$,I,W)
130 PRINT TAB(1);LINE$
140 SLEEP(2)
150 NEXT I
160 END
