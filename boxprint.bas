10 REM STRING BOX PRINT DEMO (tinybasic-bsd)
20 REM USES LEN(), LEFT$(), RIGHT$(), MID$() AND SPC()
30 PRINT "BOX PRINT DEMO"
40 INPUT "NAME";N$
50 M$="HELLO, "+N$+"!"
60 W=LEN(M$)+4
70 PRINT "+";SPC(W-2);"+"
80 PRINT "| ";M$;" |"
90 PRINT "+";SPC(W-2);"+"
100 PRINT ""
110 REM SHOW LEFT$/RIGHT$/MID$ ON THE MESSAGE
120 PRINT "LEFT$ : ";LEFT$(M$,5)
130 PRINT "RIGHT$: ";RIGHT$(M$,5)
140 PRINT "MID$  : ";MID$(M$,3,5)
150 END
