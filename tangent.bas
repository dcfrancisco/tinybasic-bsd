10 REM TANGENT PLOT DEMO (tinybasic-bsd)
20 PI=3.14159265358979
30 CENTER=20: AMP=6
40 PRINT "TANGENT -80..80 DEGREES"
50 PRINT "(LIMITED TO AVOID HUGE VALUES)"
60 FOR D=-80 TO 80 STEP 5
70 R=D*PI/180
80 T=TAN(R)
90 IF T>3 THEN T=3
100 IF T<-3 THEN T=-3
110 X=CENTER+AMP*T
120 PRINT TAB(X);"*"
130 SLEEP(1)
140 NEXT D
150 END
